<ivy-module version="2.0">
	<info organisation="pandawind.com" module="panda-java" revision="${prj.version}"/>
	<configurations>
		<conf name="api" visibility="public" />
		<conf name="compile" visibility="public" />
		<conf name="gae" visibility="public" />
		<conf name="jdbc" visibility="public" />
		<conf name="test" visibility="public" />
	</configurations>
	<publications>
		<artifact name="${prj.name}" type="jar" conf="compile" ext="jar" />
		<artifact name="${prj.name}-test" type="jar" conf="test" ext="jar" />
	</publications>
	<dependencies>
		<!-- API -->
		<dependency org="org.apache.tomcat" name="servlet-api" rev="6.0.37" conf="api->master,sources" />
		<dependency org="org.apache.tomcat" name="el-api" rev="6.0.37" conf="api->master,sources" />
		<dependency org="org.apache.tomcat" name="jsp-api" rev="6.0.37" conf="api->master,sources" />
		<dependency org="net.sf.jsr107cache" name="jsr107cache" rev="1.1" conf="api->master,sources" />

		<!-- COMPILE -->
		<dependency org="commons-cli" name="commons-cli" rev="1.2" conf="compile->master,sources" />
		<dependency org="commons-net" name="commons-net" rev="3.3" conf="compile->master,sources" />
		<dependency org="javax.mail" name="mail" rev="1.4.7" conf="compile->master,sources" />
		<dependency org="log4j" name="log4j" rev="1.2.17" conf="compile->master,sources" />
		<dependency org="net.sf.jtidy" name="jtidy" rev="r938" conf="compile->master,sources" />
		<dependency org="org.apache.commons" name="commons-email" rev="1.2" conf="compile->master,sources" />
		<dependency org="org.apache.commons" name="commons-vfs2" rev="2.0" conf="compile->master,sources" />
		<dependency org="org.freemarker" name="freemarker" rev="2.3.20" conf="compile->master,sources" />
		<dependency org="javax.activation" name="activation" rev="1.1.1" conf="compile->master,sources" />
		<dependency org="com.amazonaws" name="aws-java-sdk" rev="1.5.5" conf="compile->master,sources" />

		<!-- GAE -->
		<dependency org="com.google.appengine" name="appengine-api-1.0-sdk" rev="1.8.3" conf="gae->master,sources" />
		<dependency org="com.google.appengine" name="appengine-api-labs" rev="1.8.3" conf="gae->master,sources" />
		<dependency org="com.google.appengine" name="appengine-jsr107cache" rev="1.8.3" conf="gae->master,sources" />
		<dependency org="org.freemarker" name="freemarker-gae" rev="2.3.20" conf="gae->master,sources" />

		<!-- JDBC -->
		<dependency org="com.h2database" name="h2" rev="1.3.173" conf="jdbc->master,sources" />
		<dependency org="mysql" name="mysql-connector-java" rev="5.1.26" conf="jdbc->master,sources" />
		<dependency org="org.hsqldb" name="hsqldb" rev="2.3.0" conf="jdbc->master,sources" />
		<dependency org="org.postgresql" name="postgresql" rev="9.2-1003-jdbc4" conf="jdbc->master,sources" />
		<dependency org="org.xerial" name="sqlite-jdbc" rev="3.7.15-M1" conf="jdbc->master,sources" />

		<!-- TEST -->
		<dependency org="junit" name="junit" rev="4.11" conf="test->*"/>
		<dependency org="emma" name="emma" rev="2.1.5320" conf="test->*"/>
		<dependency org="emma" name="emma_ant" rev="2.1.5320" conf="test->*"/>
	</dependencies>
</ivy-module>
