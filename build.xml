<?xml version="1.0" encoding="UTF-8"?>
<project name="panda-java" default="usage" basedir=".">
	<property file="build.properties"/>
	
	<path id="dep.cp">
		<path refid="lib.cp"/>
		<fileset dir="lib/gae" erroronmissingdir="false">
			<include name="*.jar"/>
			<exclude name="*-sources.jar"/>
		</fileset>
	</path>

	<!-- build -->
	<import file="ant/panda-build.xml"/>
	
	<!-- release -->
	<target name="release" description="Release the project">
		<antcall target="ivy-report"/>
		<antcall target="dist"/>
		<antcall target="mvn-panda-deploy"/>
	</target>
</project>
