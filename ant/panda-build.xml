<?xml version="1.0" encoding="UTF-8"?>
<project name="panda-build">
	<!-- version -->
	<import file="panda-version.xml"/>

	<!-- ivy -->
	<import file="prj-ivy.xml"/>

	<!-- build -->
	<import file="prj-build.xml"/>
	<target name="build" depends="clean, cpres, n2a, javac, javadoc" description="Build the project"/>
	<target name="dist" depends="jardoc, jarsrc, jar" description="Distribute project to jar files"/>

	<!-- test -->
	<import file="prj-test.xml"/>

	<!-- maven -->
	<import file="prj-maven.xml"/>

	<!-- usage -->
	<property name="usage-main" value="
&#10;build            --&gt; Build the project (clean, cpres, n2a, javac, javadoc)
&#10;dist             --&gt; Distribute project to jar files (jardoc, jarsrc, jar)
&#10;release          --&gt; Release the project (ivy-resolve, build, dist, mvn-local-deploy)
"/>
	<import file="prj-usage.xml"/>

	<!-- release -->
	<target name="release" description="Release the project">
		<antcall target="ivy-resolve"/>
		<antcall target="build"/>
		<antcall target="dist"/>
		<antcall target="mvn-local-deploy"/>
	</target>
</project>
