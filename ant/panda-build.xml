<?xml version="1.0" encoding="UTF-8"?>
<project name="panda-build">
	<!-- version -->
	<import file="panda-version.xml"/>

	<!-- usage -->
	<import file="prj-usage.xml"/>

	<!-- ivy -->
	<import file="prj-ivy.xml"/>

	<!-- build -->
	<import file="prj-build.xml"/>
	<target name="build" depends="clean, cp-res, n2a, javac, javadoc" description="Build the project"/>
	<target name="dist" depends="jardoc, jarsrc, jar" description="Distribute project to jar files"/>

	<!-- test -->
	<import file="prj-test.xml"/>

	<!-- maven -->
	<import file="prj-maven.xml"/>

	<!-- release -->
	<target name="release" description="Release the project">
		<antcall target="ivy-resolve"/>
		<antcall target="build"/>
		<antcall target="dist"/>
		<antcall target="mvn-panda-deploy"/>
	</target>
</project>
