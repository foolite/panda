			<include name="*.jar"/>
		</fileset>
		<fileset dir="${sdk.tool}">
			<include name="*.jar"/>
		</fileset>
	</path>

	<path id="junit.cp">
		<pathelement path="${emma.cls}"/>
		<pathelement path="${test.cls}"/>
		<pathelement path="../nuts-core/main/classes"/>
		<pathelement path="../nuts-exts/main/classes"/>
		<pathelement path="../nuts-gae/main/classes"/>
		<pathelement path="../nuts-aems-gae/main/classes"/>
		<fileset dir="${sdk.api}">
