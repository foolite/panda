<?xml version="1.0" encoding="UTF-8"?>
<project name="panda-html" default="usage" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">
	<property file="build.properties" />
	
	<!-- version -->
	<import file="../ant/panda-version.xml"/>

	<target name="usage">
		<echo><![CDATA[
${prj.name}-${VERSION} build file
-----------------------------------

Available targets are:

build             --> Build the project (minjs, mincss)
min-css           --> Merge & minify css files
min-js            --> Merge & minify javascript files
dist              --> Distribute project as a jar file (jar)
jar               --> Make the project as a jar file
release           --> Release the project
mvn-pom           --> Generate pom.xml
mvn-local-install --> Deploy release version to maven local repository
mvn-panda-deploy  --> Deploy release version to panda-repo repository
mvn-oss-deploy    --> Deploy snapshot version to maven snapshot repository
mvn-oss-stage     --> Deploy release version to maven staging repository
]]>
		</echo>
	</target>

	<!-- ivy -->
	<target name="ivy-resolve" description="ivy --> retreive dependencies">
		<delete includeEmptyDirs="true" failonerror="false">
			<fileset dir="lib/tool"/>
		</delete>
		<ivy:retrieve conf="tool" pattern="lib/tool/[artifact](-[classifier]).[ext]"/>
	</target>

	<target name="ivy-clean" description="ivy --> clean the cache">
		<ivy:cleancache />
	</target>

	<!-- build -->
	<target name="min-js" description="Merge &amp; minify javascript files">
		<!-- bootstrap2 -->
		<concat destfile="src/main/bootstrap2/js/bootstrap-datetimepicker-i18n.js" binary="true">
			<fileset dir="src/main/bootstrap2/js/locales">
				<include name="*.js"/>
			</fileset>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap2/js/bootstrap-datetimepicker-i18n.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap2/js/bootstrap-datetimepicker-i18n.min.js"/>
		</java>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap2/js/bootstrap-datetimepicker.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap2/js/bootstrap-datetimepicker.min.js"/>
		</java>

		<!-- bootstrap3 -->
		<concat destfile="src/main/bootstrap3/js/bootstrap-datetimepicker-i18n.js" binary="true">
			<fileset dir="src/main/bootstrap3/js/locales">
				<include name="*.js"/>
			</fileset>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap3/js/bootstrap-datetimepicker-i18n.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap3/js/bootstrap-datetimepicker-i18n.min.js"/>
		</java>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap3/js/bootstrap-datetimepicker.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap3/js/bootstrap-datetimepicker.min.js"/>
		</java>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap3/js/bootstrap-switch.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap3/js/bootstrap-switch.min.js"/>
		</java>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap3/js/bootstrap-patch.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap3/js/bootstrap-patch.min.js"/>
		</java>

		<!-- bootstrap3 plugins -->
		<concat destfile="src/main/bootstrap3/js/bootstrap-plugins.js" binary="true">
			<fileset dir="src/main/bootstrap3/js">
				<include name="bootstrap-*.js"/>
				<exclude name="bootstrap-plugins*.js"/>
				<exclude name="bootstrap-*.min.js"/>
				<exclude name="bootstrap-*-i18n.*js"/>
			</fileset>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap3/js/bootstrap-plugins.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap3/js/bootstrap-plugins.min.js"/>
		</java>
		<copy overwrite="true" 
			file="src/main/bootstrap3/js/bootstrap-datetimepicker-i18n.js" 
			tofile="src/main/bootstrap3/js/bootstrap-plungins-i18n.js"/>
		<copy overwrite="true" 
			file="src/main/bootstrap3/js/bootstrap-datetimepicker-i18n.min.js" 
			tofile="src/main/bootstrap3/js/bootstrap-plungins-i18n.min.js"/>

		<!-- jquery -->
		<concat destfile="src/main/jquery/js/jquery-plugins.js" binary="true">
			<fileset dir="src/main/jquery/js" includes="jquery.*.js"/>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/jquery/js/jquery-plugins.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/jquery/js/jquery-plugins.min.js"/>
		</java>

		<!-- jquery extra -->
		<concat destfile="src/main/jquery/extra/js/jquery-extra.js" binary="true">
			<fileset dir="src/main/jquery/extra/js" includes="jquery.*.js"/>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/jquery/extra/js/jquery-extra.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/jquery/extra/js/jquery-extra.min.js"/>
		</java>

		<concat destfile="src/main/jquery/extra/js/locales/jquery-extra-ja.js" binary="true">
			<fileset dir="src/main/jquery/extra/js/locales" includes="*.ja.js"/>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/jquery/extra/js/locales/jquery-extra-ja.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/jquery/extra/js/locales/jquery-extra-ja.min.js"/>
		</java>

		<concat destfile="src/main/jquery/extra/js/locales/jquery-extra-zh-CN.js" binary="true">
			<fileset dir="src/main/jquery/extra/js/locales" includes="*.zh-CN.js"/>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/jquery/extra/js/locales/jquery-extra-zh-CN.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/jquery/extra/js/locales/jquery-extra-zh-CN.min.js"/>
		</java>

		<concat destfile="src/main/jquery/extra/js/locales/jquery-extra-zh-TW.js" binary="true">
			<fileset dir="src/main/jquery/extra/js/locales" includes="*.zh-TW.js"/>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/jquery/extra/js/locales/jquery-extra-zh-TW.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/jquery/extra/js/locales/jquery-extra-zh-TW.min.js"/>
		</java>


		<!-- panda -->
		<concat destfile="src/main/panda/js/panda.js" binary="true">
			<fileset dir="src/main/panda/js">
				<include name="core.*.js"/>
				<include name="ui.*.js"/>
			</fileset>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/panda/js/panda.js"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="js"/>
			<arg value="-o"/>
			<arg value="src/main/panda/js/panda.min.js"/>
		</java>
	</target>

	<target name="min-css" description="Merge &amp; minify css files">
		<!-- bootstrap2 -->
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap2/css/bootstrap-datetimepicker.css"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="css"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap2/css/bootstrap-datetimepicker.min.css"/>
		</java>

		<!-- bootstrap3 -->
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap3/css/bootstrap-datetimepicker.css"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="css"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap3/css/bootstrap-datetimepicker.min.css"/>
		</java>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap3/css/bootstrap-switch.css"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="css"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap3/css/bootstrap-switch.min.css"/>
		</java>
		
		<!-- bootstrap3 plugins -->
		<concat destfile="src/main/bootstrap3/css/bootstrap-plugins.css" binary="true">
			<fileset dir="src/main/bootstrap3/css">
				<include name="bootstrap-*.css"/>
				<exclude name="bootstrap-theme*.css"/>
				<exclude name="bootstrap-plugins*.css"/>
				<exclude name="bootstrap-*.min.css"/>
			</fileset>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/bootstrap3/css/bootstrap-plugins.css"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="css"/>
			<arg value="-o"/>
			<arg value="src/main/bootstrap3/css/bootstrap-plugins.min.css"/>
		</java>

		<!-- jquery -->
		<concat destfile="src/main/jquery/css/jquery-plugins.css" binary="true">
			<fileset dir="src/main/jquery/css" includes="jquery.*.css"/>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/jquery/css/jquery-plugins.css"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="css"/>
			<arg value="-o"/>
			<arg value="src/main/jquery/css/jquery-plugins.min.css"/>
		</java>

		<!-- panda -->
		<concat destfile="src/main/panda/css/panda.css" binary="true">
			<fileset dir="src/main/panda/css" includes="ui.*.css"/>
		</concat>
		<java jar="lib/tool/yuicompressor.jar" fork="true" failonerror="true">
			<arg value="src/main/panda/css/panda.css"/>
			<arg value="--charset"/>
			<arg value="UTF-8"/>
			<arg value="--type"/>
			<arg value="css"/>
			<arg value="-o"/>
			<arg value="src/main/panda/css/panda.min.css"/>
		</java>
	</target>

	<target name="build" depends="min-js, min-css" description="Build the project"/>

	<target name="jar" description="Make project as a jar file">
		<delete dir="out"/>
		<jar destfile="out/${prj.name}-${VERSION}.jar">
			<manifest>
				<attribute name="Created-By" value="${prj.org}"/>
				<attribute name="Built-By" value="${prj.org}"/>
				<attribute name="Built-Date" value="${TODAY}"/>
				<attribute name="Implementation-Title" value="${prj.title}"/>
				<attribute name="Implementation-Version" value="${VERSION}"/> 
				<attribute name="Implementation-Vendor" value="${prj.url}"/>
			</manifest>
			<fileset dir="src/main">
				<include name="**"/>
			</fileset>
		</jar>
	</target>
	
	<target name="ghp" description="Copy panda sources to panda-html gh-pages branch">
		<delete dir="../../panda.ghp/${prj.version}"/>
		<mkdir dir="../../panda.ghp/${prj.version}"/>
		<copy todir="../../panda.ghp/${prj.version}" preservelastmodified="true">
			<fileset dir="src/main">
				<include name="**"/>
			</fileset>
		</copy>
	</target>

	<target name="dist" depends="jar" description="Distribute project as a jar file"/>

	<!-- maven -->
	<import file="../ant/prj-maven.xml"/>
	
	<!-- release -->
	<target name="release" description="Release the project">
		<antcall target="ivy-resolve"/>
		<antcall target="build"/>
		<antcall target="dist"/>
		<antcall target="mvn-panda-deploy"/>
		<antcall target="ghp"/>
	</target>
</project>
