<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.action.excludePattern" value="/_.*"/>
	<constant name="struts.action.extension" value=""/>
	<constant name="struts.configuration.xml.reload" value="false"/>
	<constant name="struts.custom.i18n.resources" value="panda.exts.struts2.Resource,panda.gae.struts2.GaeResource,test"/>
	<constant name="struts.devMode" value="false"/>
	<constant name="struts.enable.DynamicMethodInvocation" value="false"/>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<constant name="struts.i18n.reload" value="false"/>
	<constant name="struts.locale" value="ja"/>
	<constant name="struts.ognl.allowStaticMethodAccess" value="true"/>
	<constant name="struts.serve.static" value="true"/>
	<constant name="struts.serve.static.browserCache" value="true"/>
	<constant name="struts.ui.theme" value="simple"/>
	<constant name="struts.ui.templateDir" value="template"/>
	<constant name="struts.ui.templateSuffix" value="java"/>

	<constant name="panda.fonts.path" value="web://fonts"/>
	<constant name="panda.locale.valid" value="ja,zh"/>
	<constant name="panda.datepicker.defaults" value="{ changeMonth: true, changeYear: true, showOn: 'both', buttonText: '' }"/>
	<constant name="panda.timepicker.defaults" value="{ showOn: 'both', buttonText: '' }"/>
	<constant name="panda.datetimepicker.defaults" value="{ changeMonth: true, changeYear: true, showOn: 'both', buttonText: '' }"/>
	<constant name="panda.multipart.maxSize" value="3145728"/>
	<constant name="panda.url.encode" value="false"/>
<!--<constant name="panda.url.escapeAmp" value="false"/>-->
	<constant name="panda.url.includeParams" value="none"/>

	<package name="struts-test" namespace="/test" extends="panda-default">
		<global-results>
			<result name="input" type="json"></result>
			<result name="success" type="json">bean</result>
		</global-results>

		<action name="html2pdf" class="panda.exts.struts2.actions.Html2PdfAction">
			<result name="input" type="freemarker">/panda/exts/struts2/actions/Html2Pdf.ftl</result>
		</action>

		<action name="jsontest" class="panda.exts.struts2.test.TestAction"/>

		<action name="xmltest" class="panda.exts.struts2.test.TestAction">
			<result name="success" type="xml">bean</result>
		</action>

		<action name="datetagtest_*" class="panda.exts.struts2.test.TestAction">
			<result name="success" type="freemarker">/panda/exts/struts2/views/DateTag-{1}.ftl</result>
		</action>
		<action name="booltagtest_*" class="panda.exts.struts2.test.TestAction">
			<result name="success" type="freemarker">/panda/exts/struts2/views/BoolTag-{1}.ftl</result>
		</action>

		<action name="constantsvalidate" class="panda.exts.struts2.test.TestAction"/>
		<action name="constantsvalidate2" class="panda.exts.struts2.test.TestAction"/>
		<action name="constantsvalidate3" class="panda.exts.struts2.test.TestAction"/>

		<action name="datevalidate" class="panda.exts.struts2.test.TestAction"/>

		<action name="filenamevalidate" class="panda.exts.struts2.test.TestAction"/>
	</package>
</struts>
